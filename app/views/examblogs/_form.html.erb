<%= form_with(model: @examblog, local: true, url: choose_new_or_edit ) do |form| %>
  <% if @examblog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @examblog.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @examblog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="blog_title">
    <%= form.label :題名 %>
    <%= form.text_field :title %>
  </div>
  <div class="blog_content">
    <%= form.label :内容 %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to "ブログ一覧画面にもどる", examblogs_path %>
